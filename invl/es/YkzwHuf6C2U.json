  "json": [
    {
      "index": 1,
      "start_time": 0.0,
      "end_time": 7000.0,
      "text": "Traductor: Sebastián González Grenethier\nRevisor: Sebastian Betti"
    },
    {
      "index": 2,
      "start_time": 7911.0,
      "end_time": 10936.0,
      "text": "\"Muérete, chica\"."
