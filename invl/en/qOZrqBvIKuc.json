    {
      "index": 16,
      "start_time": 62700.0,
      "end_time": 65060.0,
      "text": "Grammar it's not my friend!"
    },
    {
      "index": 17,
      "start_time": 65060.0,
      "end_time": 68060.0,
      "text": "Remember how you learned your mother tongue?"
    },
    {
      "index": 18,
      "start_time": 68060.0,
      "end_time": 73160.0,
