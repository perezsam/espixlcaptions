    {
      "index": 122,
      "start_time": 343600.0,
      "end_time": 347319.0,
      "text": "6.626 times 10 to the negative 34th,"
    },
    {
      "index": 123,
      "start_time": 347319.0,
      "end_time": 351866.0,
