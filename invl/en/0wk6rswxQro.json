    {
      "index": 31,
      "start_time": 104271.0,
      "end_time": 106306.0,
      "text": "will be stuck paying forever."
    },
    {
      "index": 32,
      "start_time": 106306.0,
      "end_time": 107841.0,
      "text": "I paid for the wall."
    },
    {
      "index": 33,
      "start_time": 107841.0,
      "end_time": 109910.0,
      "text": "My father's father   paid for the wall."
    },
    {
      "index": 34,
      "start_time": 109910.0,
      "end_time": 113881.0,
      "text": "And one day you   will pay for the wall."
    },
    {
      "index": 35,
      "start_time": 113881.0,
      "end_time": 118485.0,
      "text": "Because this is Wall World."
    },
    {
      "index": 36,
      "start_time": 118485.0,
      "end_time": 120888.0,
      "text": "Even just faking the wall for our show"
    },
    {
      "index": 37,
      "start_time": 120888.0,
