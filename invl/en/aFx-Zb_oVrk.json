    {
      "index": 24,
      "start_time": 88654.0,
      "end_time": 90570.0,
      "text": "(water splashing)"
    },
    {
      "index": 25,
      "start_time": 90570.0,
      "end_time": 93899.0,
      "text": "I sell my fish to supermarkets, wholesalers,"
    },
    {
      "index": 26,
      "start_time": 93900.0,
      "end_time": 98750.0,
