    {
      "index": 25,
      "start_time": 64391.00000000001,
      "end_time": 65600.0,
      "text": "(slow music)"
    },
    {
      "index": 26,
      "start_time": 65600.0,
      "end_time": 67181.0,
      "text": "As soon as the truffle is found,"
