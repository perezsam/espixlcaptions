    {
      "index": 19,
      "start_time": 52450.0,
      "end_time": 53870.0,
      "text": "They smell really nice. Where are these guys from?"
    },
    {
      "index": 20,
      "start_time": 53870.0,
      "end_time": 54702.0,
      "text": "-Spain."
    },
    {
      "index": 21,
      "start_time": 54703.0,
      "end_time": 57290.0,
      "text": "They've never been successfully cultivated on a commercial scale."
