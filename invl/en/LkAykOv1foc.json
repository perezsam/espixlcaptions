    {
      "index": 13,
      "start_time": 123400.0,
      "end_time": 125200.0,
      "text": "Where is my ball?"
    },
    {
      "index": 14,
      "start_time": 130100.0,
      "end_time": 136000.0,
      "text": "Let us understand covalent bonds with the help of an example."
    },
    {
      "index": 15,
      "start_time": 149900.0,
      "end_time": 152000.0,
      "text": "Why are you both crying?"
    },
    {
      "index": 16,
      "start_time": 153400.0,
      "end_time": 156100.0,
      "text": "We are chlorine atoms."
    },
    {
      "index": 17,
      "start_time": 156280.0,
      "end_time": 161960.0,
      "text": "I have seven electrons in my valence shell."
    },
    {
      "index": 18,
      "start_time": 162400.0,
      "end_time": 166000.0,
      "text": "I need one more electron to attain stability."
