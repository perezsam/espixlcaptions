    {
      "index": 36,
      "start_time": 139680.0,
      "end_time": 141960.0,
      "text": "We called it StopFake."
    },
    {
      "index": 37,
      "start_time": 142600.0,
      "end_time": 144216.0,
      "text": "The idea was simple:"
    },
    {
      "index": 38,
      "start_time": 144240.0,
      "end_time": 148576.0,
      "text": "take a piece of news, check it with verifiable proof"
    },
    {
      "index": 39,
      "start_time": 148600.0,
