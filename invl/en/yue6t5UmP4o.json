    },
    {
      "index": 40,
      "start_time": 152120.0,
      "end_time": 155640.0,
      "text": "If it turns out to be fake, we put it on our website."
    },
    {
      "index": 41,
      "start_time": 156600.0,
      "end_time": 160216.0,
