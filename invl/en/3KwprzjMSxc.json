    {
      "index": 5,
      "start_time": 14771.0,
      "end_time": 17354.0,
      "text": "(gentle music)"
    },
    {
      "index": 6,
      "start_time": 31907.0,
      "end_time": 33151.0,
      "text": "For the past three years,"
    },
    {
      "index": 7,
      "start_time": 33151.0,
      "end_time": 35689.0,
