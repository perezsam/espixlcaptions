    },
    {
      "index": 27,
      "start_time": 69433.0,
      "end_time": 70739.0,
      "text": "Big difference right?"
    },
    {
      "index": 28,
      "start_time": 70739.0,
      "end_time": 71445.0,
      "text": "Stay with me."
    },
    {
      "index": 29,
      "start_time": 71445.0,
      "end_time": 72645.0,
      "text": "Here's a car from today."
    },
    {
      "index": 30,
      "start_time": 72645.0,
      "end_time": 74994.0,
      "text": "And here's a car from 150 years ago."
    },
    {
      "index": 31,
      "start_time": 74994.0,
      "end_time": 76041.0,
      "text": "Big difference right?"
    },
    {
      "index": 32,
      "start_time": 76041.0,
      "end_time": 77092.0,
      "text": "Well, get this."
    },
    {
      "index": 33,
      "start_time": 77092.0,
      "end_time": 78673.0,
      "text": "Here's a classroom of today."
