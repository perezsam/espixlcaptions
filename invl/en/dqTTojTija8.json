      "text": "Proceed."
    },
    {
      "index": 23,
      "start_time": 64553.0,
      "end_time": 65424.0,
      "text": "Exhibit A."
    },
    {
      "index": 24,
      "start_time": 65424.00000000001,
      "end_time": 66603.0,
      "text": "Here's a modern day phone."
    },
    {
      "index": 25,
      "start_time": 66603.0,
      "end_time": 67443.0,
      "text": "Recognize it?"
    },
    {
      "index": 26,
      "start_time": 67443.0,
      "end_time": 69433.0,
